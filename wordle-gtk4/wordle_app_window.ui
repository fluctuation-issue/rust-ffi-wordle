<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="WordleAppWindow" parent="GtkApplicationWindow">
        <property translatable="yes" name="title">Wordle</property>
        <child>
            <object class="GtkBox" id="content">
                <property name="orientation">vertical</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-top">12</property>
                <property name="spacing">12</property>
                <child>
                    <object class="GtkEntry" id="guess_word">
                        <property translatable="yes" name="placeholder-text">My guess</property>
                    </object>
                </child>
                <child>
                    <object class="GtkBox" id="buttons">
                        <property name="orientation">horizontal</property>
                        <property name="hexpand">1</property>
                        <property name="halign">center</property>
                        <property name="spacing">12</property>

                        <child>
                            <object class="GtkButton" id="quit">
                                <property translatable="yes" name="label">Quit</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="submit">
                                <property translatable="yes" name="label">Submit</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="reset">
                                <property name="visible">0</property>
                                <property translatable="yes" name="label">Reset</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="end_state">
                        <property name="visible">0</property>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
